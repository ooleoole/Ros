@model IEnumerable<Ros.WebApplication.Models.ViewModels.BoatViewModels.BoatDropDownListViewModel>

@{
    ViewBag.Title = "DropDownList";
}

<h2>DropDownList</h2>
<br />

<div class="form-group">
    @Html.LabelFor(model => model, "Select Boat", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("BoatId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
    </div>
</div>

