<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ROS Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ROS Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("DebugMainMenu", "Index", "MainMenu")</li>*@
                    <li>@Html.ActionLink("Clubs", "Index", "Clubs")</li>
                    <li>@Html.ActionLink("Regattas", "Index", "Regatta")</li>
                    <li>@Html.ActionLink("Race Events", "Index", "RaceEvents")</li>
                    <li>@Html.ActionLink("Social Events", "Index", "SocialEvents")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Login"] == null)
                    {
                        <li>@Html.ActionLink("Login", "LoginSession", "LoginSession")</li>
                        <li>@Html.ActionLink("Register", "Create", "Users")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Main Menu", "Main", "UserMainMenu")</li>
                        <li>@Html.ActionLink("Log Out", "LogOutSession", "LoginSession")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; MatROSerna @DateTime.Now.Year - ROS Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>